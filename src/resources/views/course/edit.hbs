<div class="mt-3">
    <h3>Cập nhật Khóa Học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="exampleFormControlInput1">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" name="name">
        </div>

        <div class="form-group">
            <label for="exampleFormControlTextarea1">Mô tả</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">VideoId</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Hình ảnh</label>
            <input type="text" class="form-control" value="{{course.image}}" name="image">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Level</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="{{course.level}}" name="level">
        </div>
        <button type="submit" class=" btn btn-primary">Cập nhật</button>
        <a href="/me/stored/courses" class=" btn btn-secondary">Quay lại</a>
    </form>
</div>