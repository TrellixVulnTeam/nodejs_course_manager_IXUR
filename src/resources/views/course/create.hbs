<div class="mt-3">
    <h3>Đăng Khóa Học</h3>
    <form method="POST" action="/courses/create">
        <div class="form-group">
            <label for="exampleFormControlInput1">Tên khóa học</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nhập tên khóa học"
                name="name">
        </div>

        <div class="form-group">
            <label for="exampleFormControlTextarea1">Mô tả</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">VideoId</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="video id" name="videoId">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Hình ảnh</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Hình ảnh" name="image">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Level</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Hình ảnh" name="level">
        </div>


        <button type="submit" class=" btn btn-primary">Tạo khóa học</button>
    </form>
</div>